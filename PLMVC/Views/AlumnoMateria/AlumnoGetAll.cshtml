@model ML.Alumno

@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ALUMNOS</h2>

<table class="table table-hover table-striped table-bordered table-responsive" id="table_usuarios">
    <thead>
        <tr class="table-secondary">
            <td>Materias</td>
            <td style="display :none;">id</td>
            <td>Nombre Alumno</td>
            <td>Apellido Paterno</td>
            <td>Apellido Materno</td>
        </tr>
    </thead>

    <tbody>
        @foreach (ML.Alumno alumno in Model.Alumnos)
        {
            <tr>
                <td style="text-align: center; vertical-align: middle;"><a class="btn btn-warning glyphicon  glyphicon glyphicon-cog" href="@Url.Action("MateriasAsignadasByAlumno", "AlumnoMateria", new { idAlumno = alumno.idAlumno})"><i class="bi bi-pencil-square" style="color: ivory"></i></a></td>
                <td style="display :none;">@alumno.idAlumno </td>
                <td>@alumno.Nombre</td>
                <td>@alumno.ApellidoPaterno</td>
                <td>@alumno.ApellidoMaterno</td>              
            </tr>
        }

    </tbody>
</table>


