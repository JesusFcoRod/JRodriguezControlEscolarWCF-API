@model ML.Materia

@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class=row>
        <div class="text-center">
            <h2>GetAll</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h5>Seleccione un Alumno para editar  o presion "Agregar para registrar nuevos"</h5>
            <hr />
        </div>
    </div>
</div>

<div style="float:right;">
    @Html.ActionLink("Agregar", "Form", "Materia", htmlAttributes: new { @class = "btn btn-success" })
</div>

<br />
<table class="table table-hover table-striped table-bordered table-responsive" id="table_usuarios">
    <thead>
        <tr class="table-secondary">
            <td>Editar</td>
            <td style="display :none;">id</td>
            <td>Nombre Materia</td>
            <td>Costo</td>
            <td>Eliminar</td>
        </tr>
    </thead>

    <tbody>
        @foreach (ML.Materia materia in Model.Materias)
        {
            <tr>
                <td style="text-align: center; vertical-align: middle;"><a class="btn btn-warning glyphicon  glyphicon glyphicon-cog" href="@Url.Action("Form", "Materia", new { idMateria = materia.idMateria})"><i class="bi bi-pencil-square" style="color: ivory"></i></a></td>
                <td style="display :none;">@materia.idMateria </td>
                <td>@materia.Nombre</td>
                <td>@materia.Costo</td>


                <td style="text-align: center; vertical-align: middle;"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Materia", new { idMateria = materia.idMateria})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"><i class="bi bi-eraser-fill" style="color: mintcream"></i></a></td>
            </tr>
        }

    </tbody>
</table>


